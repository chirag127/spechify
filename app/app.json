{
  "expo": {
    "name": "app",
    "slug": "spechify",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSSpeechRecognitionUsageDescription": "This app needs access to speech recognition to convert your speech to text.",
        "NSMicrophoneUsageDescription": "Allow $(PRODUCT_NAME) to use the microphone."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "FOREGROUND_SERVICE",
        "CAPTURE_AUDIO_OUTPUT",
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ],
      "package": "com.spechify",
      "allowBackup": true
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-speech-recognition",
      [
        "expo-av",
        {
          "microphonePermission": false
        }
      ],
      "./plugins/withAndroidManifest"
    ],
    "extra": {
      "eas": {
        "projectId": "6281d2d5-9f1d-4c9a-8a13-622a34f85b0e"
      }
    },
    "owner": "chirag127"
  }
}
